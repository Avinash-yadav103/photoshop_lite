# utils/index.js

// This file contains utility functions for the frontend application. 

export const formatFileSize = (bytes) => {
    if (bytes === 0) return '0 Bytes';
    const sizes = ['Bytes', 'KB', 'MB', 'GB', 'TB'];
    const i = parseInt(Math.floor(Math.log(bytes) / Math.log(1024)));
    return Math.round(bytes / Math.pow(1024, i), 2) + ' ' + sizes[i];
};

export const isValidImageFile = (file) => {
    const validImageTypes = ['image/jpeg', 'image/png', 'image/gif', 'image/webp'];
    return validImageTypes.includes(file.type);
};

export const isValidVideoFile = (file) => {
    const validVideoTypes = ['video/mp4', 'video/x-msvideo', 'video/x-matroska', 'video/quicktime'];
    return validVideoTypes.includes(file.type);
};

export const debounce = (func, delay) => {
    let timeout;
    return function(...args) {
        const context = this;
        clearTimeout(timeout);
        timeout = setTimeout(() => func.apply(context, args), delay);
    };
};