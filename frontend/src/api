# frontend/src/api/index.js

import axios from 'axios';

const apiClient = axios.create({
    baseURL: 'http://localhost:5000/api', // Adjust the base URL as needed
    headers: {
        'Content-Type': 'application/json',
    },
});

// User authentication endpoints
export const login = (credentials) => {
    return apiClient.post('/auth/login', credentials);
};

export const register = (userData) => {
    return apiClient.post('/auth/register', userData);
};

// Asset management endpoints
export const uploadAsset = (formData) => {
    return apiClient.post('/assets/upload', formData, {
        headers: {
            'Content-Type': 'multipart/form-data',
        },
    });
};

export const getAssets = () => {
    return apiClient.get('/assets');
};

// Image editing endpoints
export const applyEdit = (editData) => {
    return apiClient.post('/edits', editData);
};

// Video processing endpoints
export const processVideo = (videoData) => {
    return apiClient.post('/video/process', videoData);
};